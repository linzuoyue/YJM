<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    android:id="@+id/item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/assist"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:textColor="#59cca7"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/icon_label_arrow"
        app:layout_textSizePercent="3.733333%w"
        app:layout_heightPercent="10.666667%w"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/assist"
        android:gravity="center_vertical"
        android:text="精选推荐"
        android:textColor="#555555"
        app:layout_heightPercent="10.666667%w"
        app:layout_textSizePercent="4.8%w"/>

</com.zhy.android.percent.support.PercentRelativeLayout>